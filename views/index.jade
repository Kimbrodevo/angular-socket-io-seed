extends layout

block body
  div.container(ng-controller='AppCtrl')    
    h2 Hello {{name}}
 
    div.btn-group    
      a(href='{{view.url}}', class="btn", ng-class='{"btn-primary" : isSelected(view)}', ng-repeat='view in views', ng-click='setSelected(view)')  
        i(class='{{ view.icon }}', ng-class='{"icon-white" : isSelected(view)}')
        |  {{ view.name }}

    div(class="well", ng-view)
   
    div
      | Angular Socket.io seed app: v
      span(app-version)

  script(src='angular/angular.js')
  script(src='/socket.io/socket.io.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
